{
  "name": "color-picker",
  "description": "Webcomponent color-picker following open-wc recommendations",
  "license": "MIT",
  "author": "Ron Gilchrist (thewebkid)",
  "version": "0.1.0",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": "./index.js",
    "./color-picker.js": "./color-picker.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
