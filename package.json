  "dependencies": {
    "lit": "^3.0.2",
    "lit-movable": "^0.1.7",
    "modern-color": "^1.1.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-puppeteer": "^0.15.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.53.0",
    "eslint-plugin-lit-a11y": "^1.1.0-next.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "vite": "^5.0.0"
  },
  "customElements": "custom-elements.json",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
